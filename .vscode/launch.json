  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to container",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/api-server/src",
      "remoteRoot": "/opt/api-server",
      "protocol": "inspector",
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "sourceMapPathOverrides": {
        "/opt/api-server*": "${workspaceRoot}/api-server/*"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch api-server locally",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/api-server/index.js"
    }
  ]
}
